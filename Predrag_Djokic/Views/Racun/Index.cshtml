    ViewBag.Title = "Index";
}

<h2>Lista racuna</h2>


<table class="table table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BrojRacuna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NosilacRacuna)
