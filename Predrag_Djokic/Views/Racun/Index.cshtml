        <td>
            @Html.DisplayFor(modelItem => item.BrojRacuna)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NosilacRacuna)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.OnlineBanking)*@
            @(item.OnlineBanking ? "Da" : "Ne")
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Aktivan)*@
            @(item.Aktivan ? "Da" : "Ne")
        </td>
        <td>
            @Html.ActionLink("Otvori", "Details", new { id = item.Id }) |
            @Html.ActionLink("Izmeni", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Obrisi", "Delete", new { id = item.Id }) |
       


            
            @if (item.Aktivan)
            {
                @Html.ActionLink("Deaktiviraj", "Details", new { id = item.Id });
            }
            else
            {

                @Html.ActionLink("Aktiviraj", "Details", new { id = item.Id });

            }
        </td>
    </tr>
}

</table>
